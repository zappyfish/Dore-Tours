<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context=".NavigationActivity">

    <fragment android:name="com.example.liamkelly.doretours.data.location.GPSFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_gps_fragment" />

    <fragment android:name="com.example.liamkelly.doretours.NavigationDestinationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_destination_fragment" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_view"/>

</LinearLayout>